<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ACadSharp.Viewer.ViewModels"
        xmlns:converters="using:ACadSharp.Viewer.Converters"
        mc:Ignorable="d" 
        d:DesignWidth="600" d:DesignHeight="500"
        x:Class="ACadSharp.Viewer.Views.BatchConverterWindow"
        x:DataType="vm:BatchConverterViewModel"
        Title="DWG/DXF Batch Converter"
        Width="600" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <converters:CountToBooleanConverter x:Key="CountToBooleanConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:BatchConverterViewModel/>
    </Design.DataContext>

    <Grid Margin="16" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto">
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="DWG/DXF Batch Converter" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Input Folder -->
        <Grid Grid.Row="1" ColumnDefinitions="100,*,Auto" Margin="0,0,0,12">
            <TextBlock Grid.Column="0" Text="Input Folder" 
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" Text="{Binding InputFolder}" 
                     IsEnabled="{Binding !IsConverting}"
                     Watermark="Select input folder containing CAD files"/>
            <Button Grid.Column="2" Content="..." 
                    Command="{Binding BrowseInputFolderCommand}"
                    IsEnabled="{Binding !IsConverting}"
                    Width="30" Margin="4,0,0,0"/>
        </Grid>

        <!-- Output Folder -->
        <Grid Grid.Row="2" ColumnDefinitions="100,*,Auto" Margin="0,0,0,12">
            <TextBlock Grid.Column="0" Text="Output Folder" 
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Grid.Column="1" Text="{Binding OutputFolder}" 
                     IsEnabled="{Binding !IsConverting}"
                     Watermark="Select output folder for converted files"/>
            <Button Grid.Column="2" Content="..." 
                    Command="{Binding BrowseOutputFolderCommand}"
                    IsEnabled="{Binding !IsConverting}"
                    Width="30" Margin="4,0,0,0"/>
        </Grid>

        <!-- Options -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,0,0,12">
            <CheckBox Grid.Column="0" Content="Recurse folders" 
                      IsChecked="{Binding RecurseFolders}"
                      IsEnabled="{Binding !IsConverting}"
                      Margin="0,0,16,0"/>
            <CheckBox Grid.Column="1" Content="Audit" 
                      IsChecked="{Binding Audit}"
                      IsEnabled="{Binding !IsConverting}"/>
        </Grid>

        <!-- File Filters and Output Format -->
        <Grid Grid.Row="4" ColumnDefinitions="*,*" Margin="0,0,0,12">
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <TextBlock Text="Input files filter:" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding InputFilterOptions}"
                          SelectedItem="{Binding SelectedInputFilterItem}"
                          IsEnabled="{Binding !IsConverting}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Output version:" Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding OutputFormatOptions}"
                          SelectedItem="{Binding SelectedOutputFormatItem}"
                          IsEnabled="{Binding !IsConverting}"
                          HorizontalAlignment="Stretch">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Value}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- File Count and Estimated Time -->
        <Grid Grid.Row="5" ColumnDefinitions="*,*" Margin="0,0,0,12">
            <TextBlock Grid.Column="0" Margin="0,0,16,0">
                <Run Text="Files to process: "/>
                <Run Text="{Binding TotalFiles}" FontWeight="Bold"/>
            </TextBlock>
            <TextBlock Grid.Column="1">
                <Run Text="Estimated time: "/>
                <Run Text="{Binding EstimatedTime, StringFormat='{}{0:mm\\:ss}'}" FontWeight="Bold"/>
            </TextBlock>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="6" ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,12">
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Start" 
                        Command="{Binding StartCommand}"
                        Width="80" Padding="16,8"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Width="80" Padding="16,8"/>
            </StackPanel>
        </Grid>

        <!-- Progress Section -->
        <Border Grid.Row="7" 
                BorderBrush="Gray" BorderThickness="1" 
                Background="#F5F5F5" Padding="12" Margin="0,0,0,12">
            <StackPanel Spacing="8">
                <TextBlock Text="Folder progress" FontWeight="Bold"/>
                
                <!-- Progress Bar -->
                <ProgressBar Value="{Binding OverallProgress}" 
                             Maximum="100" Height="20"/>
                
                <!-- Status Information -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">
                    <!-- Current File -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="{Binding CurrentFile}" 
                               FontWeight="SemiBold" Margin="0,0,0,4"/>
                    
                    <!-- Status Message -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="{Binding StatusMessage}" 
                               TextWrapping="Wrap" Margin="0,0,0,8"/>
                    
                    <!-- Progress Stats -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="16">
                        <TextBlock>
                            <Run Text="Processed: "/>
                            <Run Text="{Binding FilesProcessed}" FontWeight="Bold"/>
                            <Run Text=" / "/>
                            <Run Text="{Binding TotalFiles}" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Successful: "/>
                            <Run Text="{Binding SuccessfulConversions}" FontWeight="Bold" Foreground="Green"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="16">
                        <TextBlock>
                            <Run Text="Failed: "/>
                            <Run Text="{Binding FailedConversions}" FontWeight="Bold" Foreground="Red"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Elapsed: "/>
                            <Run Text="{Binding ElapsedTime, StringFormat='{}{0:mm\\:ss}'}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Error List (visible only if there are errors) -->
                <Border IsVisible="{Binding ConversionErrors.Count, Converter={StaticResource CountToBooleanConverter}}"
                        BorderBrush="Red" BorderThickness="1" 
                        Background="#FFEEEE" Padding="8" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="Conversion Errors:" FontWeight="Bold" Foreground="Red" Margin="0,0,0,4"/>
                        <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ConversionErrors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="DarkRed" 
                                                   FontSize="11" 
                                                   Margin="0,1"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Grid Grid.Row="8" ColumnDefinitions="*,Auto">
            <Button Grid.Column="1" Content="Close" 
                    Command="{Binding CloseCommand}"
                    Width="80" Padding="16,8"/>
        </Grid>

        <!-- Copyright Footer -->
        <TextBlock Grid.Row="8" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Text="ACadSharp Batch Converter" 
                   FontSize="10" Foreground="Gray" Margin="0,8,0,0"/>
    </Grid>
</Window>