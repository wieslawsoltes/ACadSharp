<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ACadSharp.Viewer.ViewModels"
        xmlns:views="using:ACadSharp.Viewer.Views"
        xmlns:controls="using:Avalonia.Controls"
        xmlns:converters="using:ACadSharp.Viewer.Converters"

        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="ACadSharp.Viewer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}">

    <Window.Resources>
        <converters:SearchHighlightConverter x:Key="SearchHighlightConverter"/>
        <converters:DataGridRowHighlightConverter x:Key="DataGridRowHighlightConverter"/>
    </Window.Resources>
    
    <Window.Styles>
        <Style Selector="Border.drag-over">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight1}" />
        </Style>
        

    </Window.Styles>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto" Margin="10,5">
                <!-- File Loading Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <Button Content="Load DWG" Click="LoadDwgButton_Click" 
                            IsEnabled="{Binding IsBusy, Converter={x:Static BoolConverters.Not}}"/>
                    <Button Content="Load DXF" Click="LoadDxfButton_Click" 
                            IsEnabled="{Binding IsBusy, Converter={x:Static BoolConverters.Not}}"/>
                    <Separator/>
                    <Button Content="Batch Search" Command="{Binding OpenBatchSearchCommand}"/>
                </StackPanel>

                <!-- Search Box -->
                <Grid Grid.Column="1" ColumnDefinitions="Auto,Auto,*,Auto" Margin="20,0,0,0">
                    <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" SelectedItem="{Binding SearchType}" 
                              ItemsSource="{Binding SearchTypeValues}"
                              Width="120" Margin="0,0,10,0"/>
                    <AutoCompleteBox Grid.Column="2" Text="{Binding SearchText}" 
                                     ItemsSource="{Binding SearchSuggestions}"
                                     Watermark="Enter search text..."
                                     FilterMode="Contains"
                                     MinimumPrefixLength="0"
                                     IsTextCompletionEnabled="True"/>
                    <Button Grid.Column="3" Content="Reset" Command="{Binding ClearSearchCommand}"
                            Margin="10,0,0,0" Padding="10,5"/>
                </Grid>


                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5">
                    <ProgressBar IsIndeterminate="{Binding IsSearching}" 
                                 Width="100" Height="4" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,*">
            <!-- Left Panel (DWG) -->
            <Border x:Name="LeftPanel" Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="0,0,1,0" Margin="0,0,5,0"
                    DragDrop.AllowDrop="True">
                <Grid RowDefinitions="Auto,*">
                    <!-- Left Panel Header -->
                    <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                            Padding="10,5">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="DWG File" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding LeftDocument.FileName}" 
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Left Panel Content -->
                    <Grid Grid.Row="1" ColumnDefinitions="250,Auto,*">
                        <!-- Object Tree -->
                        <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                BorderThickness="0,0,1,0">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0" Text="Object Tree" FontWeight="SemiBold" 
                                           Padding="10,5" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                                <TreeView x:Name="LeftTreeView" Grid.Row="1" ItemsSource="{Binding LeftDocument.FilteredObjectTreeNodes}" 
                                         SelectedItem="{Binding LeftDocument.SelectedTreeNode}">
                                    <TreeView.ItemTemplate>
                                        <TreeDataTemplate ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"/>
                                                <TextBlock Text=" (" Foreground="Gray"/>
                                                <TextBlock Text="{Binding ObjectType}" Foreground="Gray"/>
                                                <TextBlock Text=")" Foreground="Gray"/>
                                            </StackPanel>
                                        </TreeDataTemplate>
                                    </TreeView.ItemTemplate>

                                </TreeView>
                            </Grid>
                        </Border>

                        <!-- Vertical Splitter -->
                        <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- Properties Panel -->
                        <Grid Grid.Column="2" RowDefinitions="Auto,Auto,*">
                            <TextBlock Grid.Row="0" Text="Properties" FontWeight="SemiBold" 
                                       Padding="10,5" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                            
                            <!-- Breadcrumb Navigation -->
                            <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                    BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Back/Forward Navigation Buttons -->
                                    <Button Content="◀" 
                                            Command="{Binding GoBackCommand}"
                                            IsEnabled="{Binding LeftNavigationHistory.CanGoBack}"
                                            ToolTip.Tip="Go Back"
                                            Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Padding="8,4"
                                            Margin="0,0,5,0">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                            </Style>
                                            <Style Selector="Button:disabled">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button Content="▶" 
                                            Command="{Binding GoForwardCommand}"
                                            IsEnabled="{Binding LeftNavigationHistory.CanGoForward}"
                                            ToolTip.Tip="Go Forward"
                                            Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Padding="8,4"
                                            Margin="0,0,10,0">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                            </Style>
                                            <Style Selector="Button:disabled">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <!-- Breadcrumb Items -->
                                    <ItemsControl ItemsSource="{Binding LeftDocument.BreadcrumbItems}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                                                    <Button Content="{Binding Name}" 
                                                            Click="BreadcrumbButton_Click"
                                                            Tag="{Binding}"
                                                            IsEnabled="{Binding IsCurrent, Converter={x:Static BoolConverters.Not}}"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="5,2"
                                                            Margin="0,0,2,0">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                                            </Style>
                                                            <Style Selector="Button:disabled">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>
                                                    <TextBlock Text=" > " Foreground="Gray" VerticalAlignment="Center" 
                                                               IsVisible="{Binding IsCurrent, Converter={x:Static BoolConverters.Not}}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                            
                            <DataGrid Grid.Row="2" ItemsSource="{Binding LeftDocument.FilteredSelectedObjectProperties}" 
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserResizeColumns="True">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Property" Width="*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"
                                                           Padding="4,2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Value" Width="2*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Value}" 
                                                        Click="PropertyButton_Click"
                                                        Tag="{Binding}"
                                                        IsEnabled="{Binding IsNavigable}"
                                                        HorizontalAlignment="Left"
                                                        HorizontalContentAlignment="Left"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        Margin="0">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                                        </Style>
                                                        <Style Selector="Button:disabled">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Type" Width="*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Type}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"
                                                           Padding="4,2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

            <!-- Right Panel (DXF) -->
            <Border x:Name="RightPanel" Grid.Column="2" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                    BorderThickness="1,0,0,0" Margin="5,0,0,0"
                    DragDrop.AllowDrop="True">
                <Grid RowDefinitions="Auto,*">
                    <!-- Right Panel Header -->
                    <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                            Padding="10,5">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="DXF File" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding RightDocument.FileName}" 
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Right Panel Content -->
                    <Grid Grid.Row="1" ColumnDefinitions="250,Auto,*">
                        <!-- Object Tree -->
                        <Border Grid.Column="0" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                BorderThickness="0,0,1,0">
                            <Grid RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0" Text="Object Tree" FontWeight="SemiBold" 
                                           Padding="10,5" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                                <TreeView x:Name="RightTreeView" Grid.Row="1" ItemsSource="{Binding RightDocument.FilteredObjectTreeNodes}" 
                                         SelectedItem="{Binding RightDocument.SelectedTreeNode}">
                                    <TreeView.ItemTemplate>
                                        <TreeDataTemplate ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"/>
                                                <TextBlock Text=" (" Foreground="Gray"/>
                                                <TextBlock Text="{Binding ObjectType}" Foreground="Gray"/>
                                                <TextBlock Text=")" Foreground="Gray"/>
                                            </StackPanel>
                                        </TreeDataTemplate>
                                    </TreeView.ItemTemplate>

                                </TreeView>
                            </Grid>
                        </Border>

                        <!-- Vertical Splitter -->
                        <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- Properties Panel -->
                        <Grid Grid.Column="2" RowDefinitions="Auto,Auto,*">
                            <TextBlock Grid.Row="0" Text="Properties" FontWeight="SemiBold" 
                                       Padding="10,5" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                            
                            <!-- Breadcrumb Navigation -->
                            <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                    BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Back/Forward Navigation Buttons -->
                                    <Button Content="◀" 
                                            Command="{Binding GoBackCommand}"
                                            IsEnabled="{Binding RightNavigationHistory.CanGoBack}"
                                            ToolTip.Tip="Go Back"
                                            Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Padding="8,4"
                                            Margin="0,0,5,0">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                            </Style>
                                            <Style Selector="Button:disabled">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <Button Content="▶" 
                                            Command="{Binding GoForwardCommand}"
                                            IsEnabled="{Binding RightNavigationHistory.CanGoForward}"
                                            ToolTip.Tip="Go Forward"
                                            Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            Padding="8,4"
                                            Margin="0,0,10,0">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                            </Style>
                                            <Style Selector="Button:disabled">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                    
                                    <!-- Breadcrumb Items -->
                                    <ItemsControl ItemsSource="{Binding RightDocument.BreadcrumbItems}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                                                    <Button Content="{Binding Name}" 
                                                            Click="BreadcrumbButton_Click"
                                                            Tag="{Binding}"
                                                            IsEnabled="{Binding IsCurrent, Converter={x:Static BoolConverters.Not}}"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="5,2"
                                                            Margin="0,0,2,0">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                                            </Style>
                                                            <Style Selector="Button:disabled">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>
                                                    <TextBlock Text=" > " Foreground="Gray" VerticalAlignment="Center" 
                                                               IsVisible="{Binding IsCurrent, Converter={x:Static BoolConverters.Not}}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                            
                            <DataGrid Grid.Row="2" ItemsSource="{Binding RightDocument.FilteredSelectedObjectProperties}" 
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserResizeColumns="True">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Property" Width="*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"
                                                           Padding="4,2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Value" Width="2*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Value}" 
                                                        Click="PropertyButton_Click"
                                                        Tag="{Binding}"
                                                        IsEnabled="{Binding IsNavigable}"
                                                        HorizontalAlignment="Left"
                                                        HorizontalContentAlignment="Left"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        Margin="0">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                                        </Style>
                                                        <Style Selector="Button:disabled">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Type" Width="*" CanUserResize="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Type}" 
                                                           Background="{Binding IsHighlighted, Converter={StaticResource SearchHighlightConverter}}"
                                                           Padding="4,2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="10,5">
                <TextBlock Grid.Column="0" Text="{Binding LeftDocument.StatusMessage}" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Grid.Column="1" Text="|" Margin="10,0" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Grid.Column="2" Text="{Binding RightDocument.StatusMessage}" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>
        </Border>
    </Grid>

    <!-- File picker functionality is handled in code-behind using StorageProvider -->
</Window> 